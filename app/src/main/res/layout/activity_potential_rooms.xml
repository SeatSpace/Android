<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.skatt.seatspace.PotentialRooms">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/roomF1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="Available Rooms"
            android:textColor="#FFFFFF"
            android:textSize="38dp"
            android:layout_margin="25dp"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <TextView
                android:id="@+id/room1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Library- L3"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                tools:text="Library- L3" />

            <TextView
                android:id="@+id/percent1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20/54"
                android:textColor="#00FF00"
                android:textSize="30dp" />

            <Button
                android:id="@+id/view1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/smallbutton"
                android:text="View"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:onClick="view"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <TextView
                android:id="@+id/room2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Library- L5"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                tools:text="Library- L5" />

            <TextView
                android:id="@+id/percent2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="35/60"
                android:textColor="#FFAC33"
                android:textSize="30dp" />

            <Button
                android:id="@+id/view2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:background="@drawable/smallbutton"
                android:text="View"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:onClick="view"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:background="@drawable/border">
            <TextView
                android:id="@+id/room3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="Library- L4"
                android:textColor="#FFFFFF"
                android:textSize="24dp" />

            <TextView
                android:id="@+id/percent3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="70/90"
                android:textColor="#FF0000"
                android:textSize="30dp" />

            <Button
                android:id="@+id/view3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:onClick="view"
                android:background="@drawable/smallbutton"
                android:text="View"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/button"
                android:layout_gravity="center"
                android:onClick="home"
                app:srcCompat="@drawable/home" />
        </TableRow>


    </TableLayout>

</LinearLayout>
